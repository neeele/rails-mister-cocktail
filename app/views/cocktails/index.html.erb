<%= render "banner" %>
<div class="index-wrapper">
  <div class="container">
    <div class="row">
      <% if @cocktails.count >= 1 %>
        <% @cocktails.each do |cocktail| %>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
            </p>
          </div>
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
